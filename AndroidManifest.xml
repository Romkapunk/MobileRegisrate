<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.virussun.mobilereg"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" />

        <activity android:name="com.virussun.mobilereg.MainActivity" >
        </activity>
        <activity
            android:name="com.virussun.mobilereg.SplashScreen"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.virussun.mobilereg.RegionActivity"
            android:label="@string/title_activity_region" >
        </activity>
        <activity
            android:name="com.virussun.mobilereg.HospitalActivity"
            android:label="@string/title_activity_hospital" >
            <meta-data 
        	android:name="android.app.searchable"
        	android:resource="@xml/searchable"
      		/>
        </activity>
        <activity
            android:name="com.virussun.mobilereg.RegActivity"
            android:label="@string/title_activity_reg" >
        </activity>
        <activity
            android:name="com.virussun.mobilereg.RaspActivity"
            android:label="@string/title_activity_rasp" >
        </activity>
        <activity
            android:name="com.virussun.mobilereg.MyMapActivity"
            android:label="@string/title_activity_my_map" >
        </activity>
        <activity
            android:name="com.virussun.mobilereg.DivisionActivity"
            android:label="@string/title_activity_division" >
        </activity>
        <activity
            android:name="com.virussun.mobilereg.DoctorActivity"
            android:label="@string/title_activity_doctor" >
        </activity>
        <activity
            android:name="com.virussun.mobilereg.DoctorWeekActivity"
            android:label="@string/title_activity_doctor_week" >
        </activity>
        <activity
            android:name="com.virussun.mobilereg.RegistrateActivity"
            android:label="@string/title_activity_registrate" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature android:name="android.hardware.telephony.gsm"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"> </uses-permission>
	<uses-permission android:name="android.permission.WRITE_CALENDAR"> </uses-permission>

</manifest>